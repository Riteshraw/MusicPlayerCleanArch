<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="@dimen/main_padding"
    android:layout_marginTop="@dimen/margin_2dp"
    android:layout_marginRight="@dimen/main_padding"
    android:layout_marginBottom="@dimen/margin_2dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_song"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@mipmap/icons_music_48" />

    <TextView
        android:id="@+id/txt_song"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_2dp"
        android:layout_weight="3.5"
        android:gravity="center|left"
        android:padding="@dimen/padding_2dp"
        android:singleLine="true"
        android:text="@{song.name}"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/img_play"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/white"
        android:scaleType="centerInside"
        android:src="@drawable/icon_play" />

    <!--    android:onClick="@{(view)->vm.onPlayClick()}"-->
    <!--    android:src="@{vm.playImgStatus ? @drawable/icon_play:@drawable/icon_pause}"-->

</LinearLayout>