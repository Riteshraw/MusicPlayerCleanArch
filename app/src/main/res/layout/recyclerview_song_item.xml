<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.example.musicplayer.presentation.utils.UtilsKt" />

        <variable
            name="song"
            type="com.example.musicplayer.data.dao.Song" />

        <variable
            name="clickListener"
            type="com.example.musicplayer.presentation.adapter.SongClickListener" />

        <variable
            name="position"
            type="Integer" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="@{() -> clickListener.onClick(song,position)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_title"
            style="@style/folder_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:text="@{song.name}" />

        <TextView
            android:id="@+id/song_count"
            style="@style/folder_songs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|top"
            android:text='@{UtilsKt.milliSecsToHHMM(song.duration)}' />

    </LinearLayout>

</layout>

