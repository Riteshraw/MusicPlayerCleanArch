<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="folder"
            type="com.example.musicplayer.data.dao.Folder" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="clickListener"
            type="com.example.musicplayer.presentation.adapter.FolderClickListener" />
    </data>

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:onClick="@{() -> clickListener.onClick(folder,position)}"
        android:orientation="vertical">

        <TextView
            android:id="@+id/folder_title"
            style="@style/folder_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|bottom"
            android:text="@{folder.name}" />

        <TextView
            android:id="@+id/song_count"
            style="@style/folder_songs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical|top"
            android:text='@{String.valueOf(folder.songCount) + (folder.songCount>1?" songs":" song")}' />

    </LinearLayout>

</layout>

